<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calcula"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    tools:context="br.com.gecor.gecor217.CalculaActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/iofId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcularId" />

    <TextView
        android:id="@+id/parcelaId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iofId"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/iofId" />

    <TextView
        android:id="@+id/impactoId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parcelaId" />

    <EditText
        android:id="@+id/editSdDevedorId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnCalcularId"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textColor="#0033a0"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <Button
        android:id="@+id/btnLimparId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editPrazoId"
        android:layout_alignBottom="@+id/btnCalcularId"
        android:layout_marginTop="24dp"
        android:text="Limpar"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/listaRatingId" />

    <EditText
        android:id="@+id/editEntradaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPecId"
        android:layout_alignStart="@+id/editPecId"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textColor="#0033a0"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/editPecId" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editSdDevedorId"
        android:layout_toStartOf="@+id/editSdDevedorId"
        android:text="Saldo Devedor"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/editSdDevedorId"
        app:layout_constraintEnd_toStartOf="@+id/editSdDevedorId" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPrazoId"
        android:layout_alignEnd="@+id/btnCalcularId"
        android:layout_marginEnd="8dp"
        android:foregroundGravity="bottom"
        android:gravity="bottom"
        android:text="Rating Atual"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/listaRatingId"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/listaRatingId"
        tools:textSize="24sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCarenciaId"
        android:layout_alignEnd="@+id/textView7"
        android:text="Prazo(meses)"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/editPrazoId"
        app:layout_constraintEnd_toStartOf="@+id/editPrazoId" />

    <EditText
        android:id="@+id/editPecId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editSdDevedorId"
        android:layout_alignStart="@+id/editSdDevedorId"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textColor="#0033a0"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/editSdDevedorId" />

    <Button
        android:id="@+id/btnVoltarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnCalcularId"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:text="Voltar"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/listaRatingId" />

    <EditText
        android:id="@+id/editPrazoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCarenciaId"
        android:layout_alignStart="@+id/editCarenciaId"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textColor="#0033a0"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/editCarenciaId" />

    <EditText
        android:id="@+id/editCarenciaId"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/editTaxaId"
        android:layout_alignStart="@+id/editTaxaId"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textColor="#0033a0"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/editTaxaId" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEntradaId"
        android:layout_alignEnd="@+id/textView5"
        android:text="Taxa(% a.m)"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTaxaId"
        app:layout_constraintEnd_toStartOf="@+id/editTaxaId" />

    <ListView
        android:id="@+id/listaRatingId"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editPrazoId"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/textView9"
        android:foregroundGravity="top"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/editPrazoId" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editSdDevedorId"
        android:layout_alignEnd="@+id/textView"
        android:text="PEC(%)"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/editPecId"
        app:layout_constraintEnd_toStartOf="@+id/editPecId" />

    <Button
        android:id="@+id/btnCalcularId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Calcular"
        app:layout_constraintEnd_toStartOf="@+id/btnLimparId"
        app:layout_constraintStart_toEndOf="@+id/btnVoltarId"
        app:layout_constraintTop_toBottomOf="@+id/listaRatingId" />

    <EditText
        android:id="@+id/editTaxaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPecId"
        android:layout_alignStart="@+id/editEntradaId"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textColor="#0033a0"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/editEntradaId" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPecId"
        android:layout_alignEnd="@+id/textView4"
        android:text="Entrada(R$)"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/editEntradaId"
        app:layout_constraintEnd_toStartOf="@+id/editEntradaId" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTaxaId"
        android:layout_alignEnd="@+id/textView6"
        android:text="Carência(meses)"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/editCarenciaId"
        app:layout_constraintEnd_toStartOf="@+id/editCarenciaId" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9002433" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10948905" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />


</androidx.constraintlayout.widget.ConstraintLayout>
